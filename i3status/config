general {
    colors = true
    interval = 1
}

order += "volume master"
order += "disk /home"
order += "cpu_usage 0"
order += "load"
order += "time"

load {
    format = "☢ %1min"
}

cpu_usage {
    format = "↺ %usage "
}

disk "/home" {
    format = "⌂ %free"
}

volume master {
    format = "☊ %volume"
    device = "hw:1,0"
    mixer = "Master"
    mixer_idx = 0 
}

time {
    format = "%Y-%m-%d %H:%M:%S"
}
